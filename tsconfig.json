{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": ["node_modules"],
  "files": [
    "./app.ts"
  ]
}
